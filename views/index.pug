html
  head
    title ChatApp
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/style.css')
  body
    h1.border.center ChatApp
    h2.center#pug-success-message
   
    | #{title}
    p#pug-variable=message
    
    
    

      hr
      h2.center Login Form
       p#login-err=emessage
      form(action='/login', method='post').center
        div
          label Email:
          input(type='text', name='email')
        div
          label Password:
          input(type='password', name='password')
        div
          input(type='submit', value='Log In')
          
   
      hr
      h2.center Registration Form
      form(action='/register', method='post').center
        div
          label Username:
          input(type='text', name='username')
        div
          label Email:
          input(type='text', name='email')
        div
          label Password:
          input(type='password', name='password')
        
        div
          input(type='submit', value='Register')

